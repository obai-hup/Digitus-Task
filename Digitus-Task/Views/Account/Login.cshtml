<div class="container">
    <h1>Login </h1>
    <div class="d-flex justify-content-center m-3">

        <form action="/Account/Login" class="form-horizontal" role="form" method="post">

            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="text" name="username" value="" autocomplete="off" placeholder="UserName" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="password" name="password" placeholder="Password" value="" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-">
                    <button type="submit" class="btn btn-outline-primary m-2">Login</button>
                </div>
            </div>
      
            <a asp-action="Register"> Register </a>
        </form>
    </div>

</div>



