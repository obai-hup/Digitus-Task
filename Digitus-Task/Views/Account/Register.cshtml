<div class="container">
    <h1>Register </h1>
    <div class="d-flex justify-content-center m-3">

        <form action="/Account/Register" class="form-horizontal" role="form" method="post">
            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="text" name="username" value="" autocomplete="off" placeholder="UserName" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="text" name="SurName" value="" autocomplete="off" placeholder="SurName" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="text" name="Email" value="" autocomplete="off" placeholder="Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-">
                    <input class="form-control" type="password" name="password" placeholder="Password" value="" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-">
                    <button type="submit" class="btn btn-primary m-2">Register</button>

                </div>
            </div>

       
            <a asp-action="Login"> Login </a>
        </form>
    </div>

</div>